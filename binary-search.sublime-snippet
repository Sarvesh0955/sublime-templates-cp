ll l=1,r=1;
while(good()){
    r*=2;
}
while(r-l>1){
    ll m = l+(r-l)/2;
    if(good()){
        r = m;
    }
    else{
        l = m+1;
    }
}
if(good()){
    cout<<l<<endl;
}
else{
    cout<<r<<endl;
}
